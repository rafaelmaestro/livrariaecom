{
    "name": "livraria-ecom",
    "engines": {
        "node": ">=16.0.0"
    },
    "version": "0.0.1",
    "description": "",
    "author": "Rafael Maestro",
    "contributors": [],
    "private": true,
    "license": "MIT",
    "scripts": {
        "migration:create": "npm run typeorm -- migration:create",
        "migration:run": "npm run build && npm run typeorm migration:run -- -d ./ormconfig.ts",
        "migration:revert": "npm run typeorm migration:revert -- -d ./ormconfig.ts",
        "migration:generate": "npm run build && npm run typeorm migration:generate -- -d ./ormconfig.ts -p",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "cross-env APP_ENV=DEV nest start --watch",
        "test": "cross-env APP_ENV=test && jest --runInBand --detectOpenHandles --passWithNoTests --",
        "test:cov": "npm run build && jest --coverage --detectOpenHandles",
        "typeorm": "cross-env APP_ENV=dev node --require ts-node/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/cqrs": "^9.0.3",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/mapped-types": "*",
        "@nestjs/microservices": "^9.0.7",
        "@nestjs/passport": "^10.0.2",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "fs": "^0.0.1-security",
        "kafkajs": "^2.2.0",
        "mysql2": "^3.6.1",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "typeorm": "^0.3.7",
        "typeorm-transactional": "^0.4.0",
        "typescript": "^4.8.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^9.0.11",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.8",
        "@types/node": "^17.0.29",
        "@types/passport-jwt": "^3.0.10",
        "@types/passport-local": "^1.0.36",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.35.1",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^28.1.3",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^28.0.8",
        "ts-loader": "^9.2.3",
        "ts-node": "10.7.0",
        "tsconfig-paths": "^3.10.1"
    },
    "lint-staged": {
        "*.ts": [
            "pretty-quick --staged"
        ]
    }
}
